{
  "compilerOptions": {
    "target": "es2017", 
    "module": "CommonJS", 
    "outDir": "./dist/src",  // Compile to dist/src for backend files
    "rootDir": "./src",      // Specify the root directory for your backend TypeScript files
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"  // Include all .ts files in the src folder
  ]
}
